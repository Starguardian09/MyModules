<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2_70"
    tools:context=".ModuleDetails">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="175dp"
        android:layout_height="169dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/untitled_1" />

    <TextView
        android:id="@+id/ModuleCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futuradisplaybqregular"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/ModuleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futuradisplaybqregular"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futuradisplaybqregular"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Sem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futuradisplaybqregular"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futuradisplaybqregular"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Venue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futuradisplaybqregular"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Homebutton"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/futuradisplaybqregular"
        android:text="Home"
        android:textColor="#000000"
        android:textColorHint="#D60808"
        android:textSize="24sp"
        app:backgroundTint="#FACF4E" />

    <TextView
        android:id="@+id/quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/futuradisplaybqregular"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#000000"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futuradisplaybqregular"
        android:gravity="right|center_horizontal"
        android:textColor="#000000"
        android:textSize="30sp" />

</LinearLayout>